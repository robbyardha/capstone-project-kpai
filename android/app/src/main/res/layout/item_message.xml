<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_message"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="4dp"
        android:background="@drawable/rounded_send"
        android:backgroundTint="#BEBEBE"
        android:padding="14dp"
        android:text="This is a sample message that will appear"
        android:textColor="@android:color/black"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"/>


    <TextView
        android:visibility="visible"
        android:id="@+id/tv_bot_message"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="4dp"
        android:background="@drawable/rounded_box_receive"
        android:backgroundTint="#0019FD"
        android:padding="14dp"
        android:text="This is sample message that will appear"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@android:color/white"
        android:textSize="14sp"/>
</RelativeLayout>